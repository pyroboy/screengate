

Table gate {
  id serial [pk]
  name varchar
  devices json
}

Table device {
  id serial [pk]
  name varchar
  holder_id serial
}

// *******  DIGITAL SIDE  ********** 
Table notifications {
  id serial [pk]
  scan_id int [not null, unique]
  contact_id serial
  notification_content varchar
  created_at timestamp [default: `now()`]
}
//webhook scan data
//where does the matching happen?
//   scan data == id number
//then gql query to get completedata
// the most updated table
Table scan {
  id serial [pk]
  data varchar
}

Table scan_person {
  scan_id serial
  id_number varchar
  person_id serial
  device_id serial
  gate_id serial
  contact_id serial
  designation boolean [default: 1]
  created_at timestamp [default: `now()`]
}

Table sms_counter
{
  id serial [pk]
  smsc varchar
  count int
}

Table sms {
  id serial [pk]
  smsc varchar
  to varchar
  from varchar 
  status varchar
  content varchar
}

